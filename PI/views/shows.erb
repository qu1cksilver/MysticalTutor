		<div class="col-sm-3 col-md-3 pull-right">
        <div class="navbar-text">Nome da carta</div>

		<div class="input-group">
		
		<script type="text/javascript">
		function processForm(form) {
			window.location = "http://localhost:4567/" + form.url.value;
			return false;
		}
		</script>
		<form onsubmit="return processForm(this);">
			<div class="input-group">
				<input type="text" class="form-control" placeholder="Search" name="url" id="srch-term" onkeypress="this.value=removeSpaces(this.value);" onblur="this.value=removeSpaces(this.value);">
				<div class="input-group-btn">
					<button class="btn btn-default" type="submit" value="Submit"><i class="glyphicon glyphicon-search"></i></button>
				</div>
			</div>
		</form>


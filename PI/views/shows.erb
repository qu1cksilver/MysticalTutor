    <!-- This is table layout is pulled directly from twitter bootstrap -->
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Preço/Quantidade</th>
          </tr>
        </thead>
        <tbody>
		<th>MTGBrasil.com.br</th>
        <% @productA.each do | item | %>
          <tr>          
          	<td><%= item.at_css('.name').text %></td>
          	<td><%= item.at_css('.price').text %></td>
          </tr>
         <% end %>
		<th>Letscollect.com.br</th>
		<% @productB.each do | item | %>
		  <tr>
			<td><%= item.at_css('.dvNome').text %></td>
			<td><%= item.at_css('.dvPreco').text %></td>
		  </tr>
		 <% end %>
        </tbody>
      </table>
    </div>

